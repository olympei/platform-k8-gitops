# Example Terraform Variables File
# Copy this file to terraform.tfvars and update with your values

# AWS Configuration
aws_account_id = "123456789012"
aws_region     = "us-east-1"

# EKS Cluster Configuration
cluster_name      = "my-eks-cluster"
oidc_provider_arn = "arn:aws:iam::123456789012:oidc-provider/oidc.eks.us-east-1.amazonaws.com/id/XXXXX"
oidc_provider_url = "oidc.eks.us-east-1.amazonaws.com/id/XXXXX"

# Environment
environment = "dev"

# Global Pod Identity Toggle
# Set to false to disable ALL Pod Identity associations (use IRSA instead)
enable_pod_identity = true

# Individual Pod Identity Toggles
# These only apply when enable_pod_identity = true
# Set to false to disable Pod Identity for specific services

enable_pod_identity_efs_csi                        = true
enable_pod_identity_external_secrets               = true
enable_pod_identity_ingress_nginx                  = true
enable_pod_identity_secrets_store                  = true
enable_pod_identity_cluster_autoscaler             = true
enable_pod_identity_metrics_server                 = true
enable_pod_identity_external_dns                   = true
enable_pod_identity_aws_load_balancer_controller   = true

# Common Tags
tags = {
  Terraform   = "true"
  Environment = "dev"
  Project     = "eks-addons"
  ManagedBy   = "terraform"
}

# Example: Disable Pod Identity for specific services
# enable_pod_identity_metrics_server = false
# enable_pod_identity_ingress_nginx = false

# Example: Use IRSA for all services (disable Pod Identity globally)
# enable_pod_identity = false
